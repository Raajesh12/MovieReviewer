<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:id="@+id/activity_add_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raajesharunachalam.movieratingsapp.AddMovie">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_movie_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:text="Add A New Movie"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_movie_title"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:hint="Enter Movie Title"
        android:background="#E0E0E0"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/genre_title"
        app:layout_constraintLeft_toLeftOf="@id/enter_title"
        app:layout_constraintRight_toRightOf="@id/enter_title"
        app:layout_constraintTop_toBottomOf="@id/enter_title"
        android:layout_marginTop="30dp"
        android:text="Choose a genre"
        android:textSize="18sp"/>
    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/genre"
        app:layout_constraintLeft_toLeftOf="@+id/enter_title"
        app:layout_constraintRight_toRightOf="@+id/enter_title"
        app:layout_constraintTop_toBottomOf="@+id/genre_title"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="16dp">
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/action"
            android:text="Action"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGenre"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/adventure"
            android:text="Adventure"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGenre"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/comedy"
            android:text="Comedy"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGenre"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/drama"
            android:text="Drama"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGenre"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/horror"
            android:text="Horror"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGenre"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/romance"
            android:text="Romance"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGenre"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/sci_fi"
            android:text="Sci-Fi"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="chooseGenre"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />

    </RadioGroup>


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/enter_description"
        android:minLines="2"
        android:gravity="top"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/enter_title"
        app:layout_constraintRight_toRightOf="@+id/enter_title"
        app:layout_constraintTop_toBottomOf="@+id/genre"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:hint="Enter Description"
        android:background="#E0E0E0"
        tools:layout_editor_absoluteY="16dp" />
    <EditText
        android:inputType="number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/enter_rating"
        app:layout_constraintLeft_toLeftOf="@+id/enter_title"
        app:layout_constraintRight_toRightOf="@+id/enter_title"
        app:layout_constraintTop_toBottomOf="@+id/enter_description"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:hint="Enter Rating"
        android:background="#E0E0E0"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="SUBMIT"
        android:id="@+id/submit_button"
        app:layout_constraintTop_toBottomOf="@+id/enter_rating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="#F44336"
        />


    </android.support.constraint.ConstraintLayout>
</ScrollView>

